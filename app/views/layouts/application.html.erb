<!DOCTYPE html>
<html>
<head>
  <title>Todolists</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/ui-darkness/jquery-ui.css' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <div style='float: right;'> 
      <%= link_to "Home", todolists_url %> |
      <%= link_to "My Account", accounts_show_path %> |
    You are logged in as <%= current_user.login %> |
      <%= link_to "Logout", logout_path, data: {method: :delete} %>
  </div>
<% end %>

<% flash.each do |key, value| %>
  <%= content_tag :p, value, id: key %>
<% end %>

<%= yield %>

</body>
</html>