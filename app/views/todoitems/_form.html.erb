<%= form_for([@todolist, @todoitem]) do |f| %>
<% if @todoitem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todoitem.errors.count, "error") %> prohibited this todoitem from being saved:</h2>

      <ul>
      <% @todoitem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task_title %><br>
    <%= f.text_field :task_title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "40x15" %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.text_field :due_date, :class => 'datepicker' %>
  </div>
<% if @todoitem.id != nil %>
  <div class="field">
    <%= f.check_box :done? %> Task Completed
  </div>
<% end %>
  <div class="actions">
    <%= f.submit "Create/Update Todo Item"%>
  </div>
<% end %>
